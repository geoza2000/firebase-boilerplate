rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    // - Users can read their own document
    // - User documents are created/updated by backend (Cloud Functions with Admin SDK)
    // - Client can only update settings.theme field
    match /users/{userId} {
      allow read: if isOwner(userId);
      
      // User documents are created by backend via getUserDetails callable function
      allow create: if false;
      
      // Users can only update their settings (theme preference)
      // All other fields (notifications, lastLoginAt, etc.) are managed by backend
      allow update: if isOwner(userId) && 
        request.resource.data.diff(resource.data).affectedKeys().hasOnly([
          'settings',
          'updatedAt'
        ]);
      
      allow delete: if false;
    }
  }
}
